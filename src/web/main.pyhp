<html>
	<head>
		<pyhp include="common/head.html" />
	</head>

	<body onload="showView()">
		<div id="top_bar">
			<div onclick="lnk('view','artists')">Artists</div>
			<div onclick="lnk('view','albums')">Albums</div>
			<div onclick="lnk('view','tracks')">Tracks</div>
			<br/>
			<div onclick="lnk('sort','alphabet')">A-Z</div>
			<div onclick="lnk('sort','last')">⏲️</div>
			<div onclick="lnk('sort','most')">#</div>
		</div>


		<div id="content_area" class="content_area">

		</div>

		<div id="playback_bar">
			<div id="progressbar" onclick="seek(event,this)">
				<div id="progressed" style="width:0%;" class="update" data-updatefrom="updateProgressBar"></div>
			</div>
			<table><tr>
				<td id="metadata">
				<!--	<div id="current_track_artwork"></div>
					<div id="current_track_data">
						<span id="current_track_title"></span>
						<span id="current_track_artists"></span>
					</div>
					<div id="up_next">
						<ul>
							<li>wat</li>
							<li>wut</li>
						</ul>
					</div> -->


					<table>
						<tr>
							<td id="current_track_artwork"></td>
							<td id="current_track_data">
								<span id="current_track_title"></span>
								<span id="current_track_artists"></span>
							</td>
							<td id="next_tracks">
								<span>Up Next</span>
								<table>
									<tr><td id="next_1"></td></tr>
									<tr><td id="next_2"></td></tr>
									<tr><td id="next_3"></td></tr>
									<tr><td id="next_4"></td></tr>
								</table>

							</td>
						</tr>
					</table>
				</td>
				<td id="controls">
					<div id="prev_button" class="button_prev" onclick="prev()"></div>
					<div id="play_pause_button" class="button_play" onclick="play"></div>
					<div id="next_button" class="button_next" onclick="next()"></div>
				</td>
				<td id="settings">
					<div id="volumecontrol" class="seekable" data-seekcallback="changeVolume">
						<div id="volume" style="width:50%;"></div>
					</div>
				</td>
			</tr></table>


		</div>
	</body>
</html>
