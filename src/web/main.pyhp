<html>
	<head>
		<pyhp include="common/head.html" />
	</head>

	<body onload="showView()">
		<div id="top_bar">
			<div onclick="lnk('view','artists')">Artists</div>
			<div onclick="lnk('view','albums')">Albums</div>
			<div onclick="lnk('view','tracks')">Tracks</div>
			<br/>
			<div onclick="lnk('sort','alphabet')">A-Z</div>
			<div onclick="lnk('sort','last')">⏲️</div>
			<div onclick="lnk('sort','most')">#</div>
		</div>


		<div id="content_area" class="content_area">

		</div>

		<div id="playback_bar">
			<div id="progressbar" onclick="seek(event,this)">
				<div id="progressed" style="width:0%;"></div>
			</div>
			<table><tr>
				<td id="metadata"></td>
				<td id="controls">
					<div id="play_pause_button" class="button_play" onclick="play()"></div>
				</td>
				<td id="settings"></td>
			</tr></table>


		</div>
	</body>
</html>
